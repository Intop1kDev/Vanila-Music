{
  "name": "yandex-music-electron",
  "version": "0.0.1",
  "description": "yandex_music_electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win-portable": "electron-builder --win --config.win.target=portable",
    "build:win-nsis": "electron-builder --win --config.win.target=nsis",
    "build:win-zip": "electron-builder --win --config.win.target=zip",
    "pack:win": "electron-builder --win --dir"
  },
  "author": "dev",
  "license": "MIT",
  "build": {
    "appId": "com.yandex.music-electron",
    "productName": "Yandex Music",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "**/*.html",
      "**/*.css",
      "**/*.js",
      "assets/icon.ico",
      "!node_modules/**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^26.0.12"
  }
}
